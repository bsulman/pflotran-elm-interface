#Description: QA test

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE TH
    /
  /
  #INPUT_RECORD_FILE
END

SUBSURFACE

#=========================== discretization ===================================
GRID
  TYPE structured
  NXYZ 10 1 1
  DXYZ
   10
   10
   10
  END
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0    0.d0   0.d0
    100.d0  10.d0  10.d0
  /
END

REGION left_end
  FACE WEST
  COORDINATES
    0.d0  0.d0   0.d0
    0.d0  10.d0  10.d0
  /
END

REGION right_end
  FACE EAST
  COORDINATES
    100.d0  0.d0   0.d0
    100.d0  10.d0  10.d0
  /
END

#=========================== material properties ==============================
MATERIAL_PROPERTY beam
  ID 1
  POROSITY 0.01d0
  TORTUOSITY 1.d0
  ROCK_DENSITY 2.8E3
  SPECIFIC_HEAT 1.d-3
  THERMAL_CONDUCTIVITY_DRY 1 W/m-C
  THERMAL_CONDUCTIVITY_WET 1 W/m-C
  SATURATION_FUNCTION default
  PERMEABILITY
    PERM_X 1.d-12
    PERM_Y 1.d-12
    PERM_Z 1.d-12
  /
END

#=========================== characteristic curves ============================
SATURATION_FUNCTION default
  SATURATION_FUNCTION_TYPE VAN_GENUCHTEN
  RESIDUAL_SATURATION 0.5d-1
  LAMBDA 0.75
  ALPHA 1.d-3
END

#===================== stratigraphy couplers ==================================
STRATA
  REGION all
  MATERIAL beam
END

#=========================== output options ===================================
OUTPUT
  SNAPSHOT_FILE
    TIMES yr 100
    #PERIODIC TIME 1000 y
    NO_PRINT_INITIAL
    #FORMAT TECPLOT BLOCK
    FORMAT VTK
  /
END

#=========================== times ============================================
TIME
  FINAL_TIME 100 yr
  INITIAL_TIMESTEP_SIZE 1.d-4 day
  MAXIMUM_TIMESTEP_SIZE 5.d0 yr at 0.d0 yr
END

#======================= flow conditions ======================================
FLOW_CONDITION initial
  TYPE
    TEMPERATURE dirichlet
    PRESSURE dirichlet
  /
  TEMPERATURE 1.5D0 C
  PRESSURE 101325 Pa
END

FLOW_CONDITION left_end
  TYPE
    TEMPERATURE dirichlet
    PRESSURE dirichlet
  /
  TEMPERATURE 1.D0 C
  PRESSURE 101325 Pa
END

FLOW_CONDITION right_end
  TYPE
    TEMPERATURE dirichlet
    PRESSURE dirichlet
  /
  TEMPERATURE 2.D0 C
  PRESSURE 101325 Pa
END

#========================== initial and boundary conditions ===================
# initial condition
INITIAL_CONDITION initial
  REGION all
  FLOW_CONDITION initial
END

# west boundary condition
BOUNDARY_CONDITION left_end
  REGION left_end
  FLOW_CONDITION left_end
END

# east boundary condition
BOUNDARY_CONDITION right_end
  FLOW_CONDITION right_end
  REGION right_end
END


END_SUBSURFACE

