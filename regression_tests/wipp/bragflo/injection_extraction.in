! 9.9  Test Case #9.  Heterogeneous Reservoir Conditions
! Testing the heterogeneous condition
! For more descriptions of the problem please read case_9.docx

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE GENERAL
      OPTIONS
        ITOL_RELATIVE_UPDATE 1.d-30
        ISOTHERMAL                        ! BF is fundamentally isothermal
        TWO_PHASE_ENERGY_DOF TEMPERATURE  ! isothermal ignores this but needs to be specified
        GAS_COMPONENT_FORMULA_WEIGHT 2.01588D0 ! hydrogen gas that BF uses (kg/kmol)
        MAXIMUM_PRESSURE_CHANGE 5.0D5          ! PRESNORM in BF
        TOUGH2_ITOL_SCALED_RESIDUAL 1.d-5
      /
    /
  /
END

SUBSURFACE

REGRESSION
  CELLS_PER_PROCESS 3
END

NEWTON_SOLVER FLOW
  RTOL 1.d-30
  ATOL 1.d-30
  STOL 1.d-30
  MAXIT 20
END

!=========================== flow mode ========================================
EOS WATER
  DENSITY CONSTANT 1.00E+3 
  VISCOSITY CONSTANT 1.00000E-03  
  ENTHALPY CONSTANT 1.8890d6    
/
FLUID_PROPERTY
  PHASE LIQUID
  DIFFUSION_COEFFICIENT 0.d-0  ! no diffusion as BF runs on immiscible flow
END

FLUID_PROPERTY
  PHASE GAS
  DIFFUSION_COEFFICIENT 0.d-0  ! no diffusion as BF runs on immiscible flow
END
!=========================== discretization ===================================
GRID
  TYPE structured
  NXYZ 15 1 1
  BOUNDS
    0.d0 0.d0 0.d0
    15.d0 1.d0 1.d0
  /
END

!=========================== material properties ==============================
WIPP
  SET_CELL_BY_CELL_SOIL_REF_PRES
END
 
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.10d0
  TORTUOSITY 1.d0
  ROCK_DENSITY 2650.d0      ! thermal parameter. isothermal ignores this.
  THERMAL_CONDUCTIVITY_DRY 0.5   ! thermal parameter. isothermal ignores this.
  THERMAL_CONDUCTIVITY_WET 2.    ! thermal parameter. isothermal ignores this.
  HEAT_CAPACITY 830.             ! thermal parameter. isothermal ignores this.
  SOIL_COMPRESSIBILITY_FUNCTION BRAGFLO  !Function used in BF
  SOIL_COMPRESSIBILITY 1.d-10     ! COMPRES in BF
  SOIL_REFERENCE_PRESSURE 101325.d0 ! REFERENCE TEMPERATURE AND PRESSURE FOR DENSITY CALCULATIONS in BF
  PERMEABILITY
    PERM_ISO 1.d-11
  /
  CHARACTERISTIC_CURVES SF1
END

MATERIAL_PROPERTY soil2
  ID 2
  POROSITY 0.10d0
  TORTUOSITY 1.d0
  ROCK_DENSITY 2650.d0      ! thermal parameter. isothermal ignores this.
  THERMAL_CONDUCTIVITY_DRY 0.5   ! thermal parameter. isothermal ignores this.
  THERMAL_CONDUCTIVITY_WET 2.    ! thermal parameter. isothermal ignores this.
  HEAT_CAPACITY 830.             ! thermal parameter. isothermal ignores this.
  SOIL_COMPRESSIBILITY_FUNCTION BRAGFLO  !Function used in BF
  SOIL_COMPRESSIBILITY 1.d-10     ! COMPRES in BF
  SOIL_REFERENCE_PRESSURE 101325.d0 ! REFERENCE TEMPERATURE AND PRESSURE FOR DENSITY CALCULATIONS in BF
  PERMEABILITY
    PERM_ISO .250d-11
  /
  CHARACTERISTIC_CURVES SF1
END

!=========================== material properties ==============================
CHARACTERISTIC_CURVES SF1
  SATURATION_FUNCTION BROOKS_COREY
    SMOOTH
    LAMBDA 0.7D0
    ALPHA  1.D30
    LIQUID_RESIDUAL_SATURATION 0.0d+0
    MAX_CAPILLARY_PRESSURE  1.d8
  /
  PERMEABILITY_FUNCTION BURDINE_BC_LIQ
    LAMBDA 0.7D0
    LIQUID_RESIDUAL_SATURATION 0.0d+0
  /
  PERMEABILITY_FUNCTION BURDINE_BC_GAS
    LAMBDA 0.7D0
    LIQUID_RESIDUAL_SATURATION 0.0d+0
    GAS_RESIDUAL_SATURATION    0.0d+0
  /
END

!=========================== output options ===================================
skip
OUTPUT
  FORMAT HDF5
END
noskip

!=========================== times ============================================
TIME
  FINAL_TIME 1.d5 s
  INITIAL_TIMESTEP_SIZE 1.d0 s
  MAXIMUM_TIMESTEP_SIZE 1.d4 s
END

!=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 0.d0
    1.5d1 1.d0 1.d0
  /
END

REGION section1
  COORDINATES
    0.d0 0.d0 0.d0
    0.5d1 1.d0 1.d0
  /
END

REGION section2
  COORDINATES
    0.5d1 0.d0 0.d0
    1.0d1 1.d0 1.d0
  /
END

REGION section3
  COORDINATES
    1.0d1 0.d0 0.d0
    1.5d1 1.d0 1.d0
  /
END

REGION rightFace
  COORDINATES
    1.5d1 0.d0 0.d0
    1.5d1 1.d0 1.d0
  /
  FACE east
END

REGION leftFace
  COORDINATES
    0.d0 0.d0 0.d0
    0.d0 1.d0 1.d0
  /
  FACE west
END

REGION injection
  FACE TOP
  COORDINATES
    0.d0 0.d0 0.d0
    1.d0 1.d0 1.d0
  /
END

REGION extraction
  FACE BOTTOM
  COORDINATES
    14.d0 0.d0 0.d0
    15.d0 1.d0 1.d0
  /
END

!=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    LIQUID_PRESSURE dirichlet
    MOLE_FRACTION DIRICHLET
    TEMPERATURE DIRICHLET
  /
  LIQUID_PRESSURE 1.d6
  MOLE_FRACTION 1.D-10
  TEMPERATURE 25.D0
END

FLOW_CONDITION injection
  TYPE
    RATE mass_rate
  /
  RATE 0.1d0 0.0d0 0.0d0 kg/s kg/s MW
END

FLOW_CONDITION extraction
  TYPE
    RATE mass_rate
  /
  RATE -0.1d0 0.0d0 0.0d0 kg/s kg/s MW
END

!=========================== condition couplers ===============================
! initial condition
INITIAL_CONDITION
  FLOW_CONDITION initial
  REGION all
END

SOURCE_SINK
  FLOW_CONDITION injection
  REGION injection
END

SOURCE_SINK
  FLOW_CONDITION extraction
  REGION extraction
END



!=========================== stratigraphy couplers ============================
STRATA
  REGION section1
  MATERIAL soil2
END

STRATA
  REGION section2
  MATERIAL soil1
END

STRATA
  REGION section3
  MATERIAL soil2
END

END_SUBSURFACE

