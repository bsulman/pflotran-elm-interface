#Description: 1D test problem for testing the fuel dissolution model with the
#canister degradaion model.

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
    SUBSURFACE_TRANSPORT transport
      GLOBAL_IMPLICIT
    /
    WASTE_FORM glass
      TYPE GLASS
    /
  /
END

SUBSURFACE
#=========================== regression =======================================
REGRESSION
  CELLS
    1
  /
END

#=========================== chemistry ========================================
CHEMISTRY
  PRIMARY_SPECIES
    Tracer1  ! Sr-90
    Tracer2  ! I-129
  /
  OUTPUT
    TOTAL
    Tracer1
    Tracer2
  /
END

#=========================== solver options ===================================
TIMESTEPPER FLOW
  TS_ACCELERATION 8
END

NEWTON_SOLVER FLOW
END

LINEAR_SOLVER FLOW
#  KSP_TYPE PREONLY
#  PC_TYPE LU
END

NEWTON_SOLVER TRANSPORT
END

LINEAR_SOLVER TRANSPORT
#  KSP_TYPE PREONLY
#  PC_TYPE LU
END

#=========================== discretization ===================================
GRID
  TYPE structured
  NXYZ 1 1 2
  BOUNDS
    0.d0 0.d0 0.d0
    1.d0 1.d0 2.d0
  END
END

#=========================== fluid properties =================================
FLUID_PROPERTY 
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  TORTUOSITY 1.d0
  CHARACTERISTIC_CURVES sf1
  PERMEABILITY
    PERM_X 1.d-12
    PERM_Y 1.d-12
    PERM_Z 1.d-12
  /
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES sf1
  SATURATION_FUNCTION VAN_GENUCHTEN
    M 0.286
    ALPHA  1.9401d-4
    LIQUID_RESIDUAL_SATURATION 0.115
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    M 0.286
    LIQUID_RESIDUAL_SATURATION 0.115
  /
END

#=========================== output options ===================================
OUTPUT
  PERIODIC_OBSERVATION TIMESTEP 1
  VARIABLES
  /
END

#=========================== times ============================================
TIME
  FINAL_TIME 700.d0 day
  INITIAL_TIMESTEP_SIZE 1.d-6 day
  MAXIMUM_TIMESTEP_SIZE 10.d0 day
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d20 0.d20 0.d20
    2.d20 2.d20 4.d20
  /
END

#=========================== observation points ===============================
OBSERVATION
  REGION all
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    PRESSURE dirichlet
  /
  PRESSURE 201325 Pa
END

#=========================== transport conditions =============================
TRANSPORT_CONDITION groundwater
  TYPE dirichlet_zero_gradient
  CONSTRAINT_LIST
    0.d0 groundwater
  /
END

#=========================== transport constraints ============================
CONSTRAINT groundwater
  CONCENTRATIONS
    Tracer1   1.e-7            F
    Tracer2   1.e-7            F
  /
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  FLOW_CONDITION initial
  TRANSPORT_CONDITION groundwater
  REGION all
END

#=========================== stratigraphy couplers ============================
STRATA
  MATERIAL soil1
  REGION all
END

#=========================== checkpoint / restart =============================
#CHECKPOINT 10

END_SUBSURFACE

GLASS
  SPECIES
    Tracer1 87.62d0 g/mol  ! Sr-90
    Tracer2 129.0d0 g/mol  ! I-129
  /
  SPECIFIC_SURFACE_AREA 2.78d-3 m^2/m^3
  MASS_FRACTION FILE glass_mass_fractions.txt
  PRINT_MASS_BALANCE
  WASTE_FORM
    COORDINATE 1.0d0 1.0d0 1.0d0
    EXPOSURE_FACTOR 10.0d0
    VOLUME 1.14d0 m^3
  /
  WASTE_FORM
    COORDINATE 1.0d0 1.0d0 3.0d0
    EXPOSURE_FACTOR 20.0d0
    VOLUME 1.14d0 m^3
  /
  CANISTER_DEGRADATION_MODEL
    VITALITY_LOG10_MEAN -0.1
    VITALITY_LOG10_STDEV 0.5
    VITALITY_UPPER_TRUNCATION 0
    CANISTER_MATERIAL_CONSTANT 1500
  /
END_GLASS
