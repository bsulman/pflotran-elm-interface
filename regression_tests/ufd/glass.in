#Description: 1D test problem for testing the fuel dissolution model with the
#canister degradaion model.

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
    SUBSURFACE_TRANSPORT transport
      GLOBAL_IMPLICIT
    /
    WASTE_FORM glass
      TYPE GLASS
    /
  /
END

SUBSURFACE
#=========================== regression =======================================
REGRESSION
  CELLS
    1
  /
END

#=========================== chemistry ========================================
CHEMISTRY
  PRIMARY_SPECIES
    I-129
    Am-241        
    Np-237
    U-233  
    Th-229 
  /
  OUTPUT
    TOTAL
    I-129
    Am-241        
    Np-237
    U-233  
    Th-229
  /
END

#=========================== solver options ===================================
TIMESTEPPER FLOW
  TS_ACCELERATION 8
END

NEWTON_SOLVER FLOW
END

LINEAR_SOLVER FLOW
#  KSP_TYPE PREONLY
#  PC_TYPE LU
END

NEWTON_SOLVER TRANSPORT
END

LINEAR_SOLVER TRANSPORT
#  KSP_TYPE PREONLY
#  PC_TYPE LU
END

#=========================== discretization ===================================
GRID
  TYPE structured
  NXYZ 1 1 2
  BOUNDS
    0.d0 0.d0 0.d0
    1.d0 1.d0 2.d0
  END
END

#=========================== fluid properties =================================
FLUID_PROPERTY 
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  TORTUOSITY 1.d0
  CHARACTERISTIC_CURVES sf1
  PERMEABILITY
    PERM_X 1.d-12
    PERM_Y 1.d-12
    PERM_Z 1.d-12
  /
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES sf1
  SATURATION_FUNCTION VAN_GENUCHTEN
    M 0.286
    ALPHA  1.9401d-4
    LIQUID_RESIDUAL_SATURATION 0.115
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    M 0.286
    LIQUID_RESIDUAL_SATURATION 0.115
  /
END

#=========================== output options ===================================
OUTPUT
  PERIODIC_OBSERVATION TIMESTEP 1
  VARIABLES
  /
END

#=========================== times ============================================
TIME
  FINAL_TIME 700.d0 day
  INITIAL_TIMESTEP_SIZE 1.d-6 day
  MAXIMUM_TIMESTEP_SIZE 10.d0 day
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d20 0.d20 0.d20
    2.d20 2.d20 4.d20
  /
END

#=========================== observation points ===============================
OBSERVATION
  REGION all
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    PRESSURE dirichlet
  /
  PRESSURE 201325 Pa
END

#=========================== transport conditions =============================
TRANSPORT_CONDITION groundwater
  TYPE dirichlet_zero_gradient
  CONSTRAINT_LIST
    0.d0 groundwater
  /
END

#=========================== transport constraints ============================
CONSTRAINT groundwater
  CONCENTRATIONS
    I-129     1.e-7            F
    Am-241    1.e-7            F    
    Np-237    1.e-7            F
    U-233     1.e-7            F
    Th-229    1.e-7            F
  /
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  FLOW_CONDITION initial
  TRANSPORT_CONDITION groundwater
  REGION all
END

#=========================== stratigraphy couplers ============================
STRATA
  MATERIAL soil1
  REGION all
END

#=========================== checkpoint / restart =============================
#CHECKPOINT 10

END_SUBSURFACE

GLASS
  SPECIES 
#   name    MW       units  dcy[1/s]  initMF   inst_rel_frac parents
    I-129   128.90d0 g/mol  1.29d-15  1.69d-6  0.7d0
    Am-241  241.06d0 g/mol  5.08d-11  3.61d-6  0.0d0         
    Np-237  237.05d0 g/mol  1.03d-14  3.62d-6  0.7d0         Am-241
    U-233   233.04d0 g/mol  1.38d-13  4.16d-11 0.0d0         Np-237   
    Th-229  229.03d0 g/mol  2.78d-12  1.93e-14 0.0d0         U-233
  / 
  SPECIFIC_SURFACE_AREA 2.78d-3 m^2/m^3
  PRINT_MASS_BALANCE
  WASTE_FORM
    COORDINATE 1.0d0 1.0d0 1.0d0
    EXPOSURE_FACTOR 10.0d0
    VOLUME 1.14d0 m^3
  /
  WASTE_FORM
    COORDINATE 1.0d0 1.0d0 3.0d0
    EXPOSURE_FACTOR 20.0d0
    VOLUME 1.14d0 m^3
  /
  CANISTER_DEGRADATION_MODEL
    VITALITY_LOG10_MEAN -0.1
    VITALITY_LOG10_STDEV 0.5
    VITALITY_UPPER_TRUNCATION 0
    CANISTER_MATERIAL_CONSTANT 1500
  /
END_GLASS
